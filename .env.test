# Test Environment Variables
# Used by Playwright E2E tests

# Test database (local SQLite file for fast, isolated tests)
DATABASE_URL="file:./e2e/test.db"

# Disable Turso auth for local file database
TURSO_GROUP_AUTH_TOKEN=""

# Enable test mode for auth bypass
E2E_TEST_MODE=true

# Clerk bypass - allows tests to skip auth
CLERK_BYPASS_AUTH=true

# Test user for authenticated routes
E2E_TEST_USER_EMAIL="test@stratcol.co.za"
E2E_TEST_USER_ID="user_test_001"

# Inngest dev mode
INNGEST_DEV=true
INNGEST_SIGNING_KEY="test-signing-key"
